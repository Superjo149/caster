{
  "name": "@amilajack/castv2-client",
  "version": "0.0.1",
  "description": "A Chromecast client based on the new (CASTV2) protocol",
  "author": "amilajack",
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "dependencies": {
    "castv2": "~0.1.9",
    "chromecast-scanner": "^0.5.0",
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/debug": "^4.1.2",
    "@types/node": "^11.11.3",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.5.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.2",
    "eslint-config-bliss": "^3.3.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "jest": "^24.5.0",
    "synp": "^1.4.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3333",
    "util": "^0.11.1"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production babel src --out-dir dist --extensions \".ts\" --source-maps inline",
    "docs": "rm -rf docs && typedoc ./src --out docs",
    "lint": "eslint --ext .ts --ext .js .",
    "test": "yarn ts && yarn lint && yarn build && yarn spec",
    "ts": "tsc",
    "ts:dec": "yarn ts --declaration"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/thibauts/node-castv2-client.git"
  },
  "keywords": [
    "chromecast",
    "chrome",
    "cast",
    "castv2"
  ],
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 10
          }
        }
      ],
      [
        "@babel/preset-typescript",
        {
          "allExtensions": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "renovate": {
    "extends": [
      "bliss"
    ]
  }
}
